<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <RecoveryNode number_of_retries="5" name="NavigateRecovery">
        <Sequence>
            <RecoveryNode number_of_retries="5" >
                <HaveFoundFreeParkingSpace/>
                <Wait wait_duration="1"/>
            </RecoveryNode>
            <MoveToFreeSpace/>
            <Wait wait_duration="30"/>
        </Sequence>
        <PipeLineSequence>
            <SingleTrigger>
                <ComputeRightEdgePath polygons="{polygons}" car_pose="{car_pose}" garage_path="{garage_path}" state="{state}" />
            </SingleTrigger>
            <RecoveryNode number_of_retries="2" name="FollowPath">
                <FollowPath path="{path}" controller_id="FollowPath"/>
                <Fallback>
                    <ClearEntireCostmap name="ClearLocalCostmap-Subtree" service_name="local_costmap/clear_entirely_local_costmap"/>
                </Fallback>
            </RecoveryNode>
            <RecoveryNode number_of_retries="2" name="LookupVacantParkingSpace">
                <LookupVacantParkingSpace goal="{goal}"/>
                <Fallback>
                    <ClearEntireCostmap name="ClearGlobalCostmap-Context" service_name="global_costmap/clear_entirely_global_costmap"/>
                    <ClearEntireCostmap name="ClearLocalCostmap-Subtree" service_name="local_costmap/clear_entirely_local_costmap"/>
                </Fallback>
            </RecoveryNode>            
        </PipeLineSequence>
    </RecoveryNode>
  </BehaviorTree>
</root>
